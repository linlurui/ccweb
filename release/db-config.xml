<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <environments default="sqlite">
        <environment id="mysql" classScope="public" >
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver" />
                <property name="url" value="jdbc:mysql://127.0.0.1:3306/ccait?serverTimezone=Asia/Shanghai&amp;useSSL=false&amp;connectTimeout=60000&amp;socketTimeout=60000&amp;autoReconnect=true" />
                <property name="username" value="root" />
                <property name="password" value="123456" />
            </dataSource>
        </environment>
        <environment id="mssql" classScope="public">
            <transactionManager type="JDBC" />
            <dataSource type="POOLED">
                <property name="driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver" />
                <property name="url" value="jdbc:sqlserver://127.0.0.1:1433;Database=ccait" />
                <property name="username" value="sa" />
                <property name="password" value="123456" />
            </dataSource>
        </environment>
        <environment id="postgresql" classScope="public">
            <transactionManager type="JDBC" />
            <dataSource type="POOLED">
                <property name="driver" value="org.postgresql.Driver"/>
                <property name="url" value="jdbc:postgresql://127.0.0.1:5432/ccait"/>
                <property name="username" value="postgres"/>
                <property name="password" value="123456"/>
            </dataSource>
        </environment>
        <environment id="oracle">
            <transactionManager type="JDBC" classScope="public" />
            <dataSource type="POOLED">
                <property name="driver" value="oracle.jdbc.OracleDriver"></property>
                <property name="url" value="jdbc:oracle:thin:@localhost:1521:orcl"></property>
                <property name="username" value="system"></property>
                <property name="password" value="123456"></property>
            </dataSource>
        </environment>
        <environment id="sqlite" classScope="public">
            <transactionManager type="JDBC" />
            <dataSource type="POOLED">
                <property name="driver" value="org.sqlite.JDBC" />
                <property name="url" value="jdbc:sqlite:ccait.db" />
                <property name="username" value="" />
                <property name="password" value="" />
            </dataSource>
        </environment>
        <environment id="derby" classScope="public">
            <dataSource type="POOLED">
                <property name="driver" value="org.apache.derby.jdbc.ClientDriver" />
                <property name="url" value="jdbc:derby://localhost:8093/ccait" />
                <property name="username" value="root" />
                <property name="password" value="123456" />
            </dataSource>
        </environment>
        <environment id="hadoop" classScope="public">
            <dataSource type="POOLED">
                <property name="driver" value="org.apache.hive.jdbc.HiveDriver" />
                <property name="url" value="jdbc:hive2://localhost:8093/ccait" />
                <property name="username" value="username" />
                <property name="password" value="123456" />
            </dataSource>
        </environment>
        <environment id="couchebase" classScope="public">
            <dataSource type="POOLED">
                <property name="driver" value="n1ql_jdbc" />
                <property name="url" value="jdbc:couchbase://localhost:8093" />
                <property name="username" value="default" />
                <property name="password" value="123456" />
            </dataSource>
        </environment>
    </environments>
</configuration>  
